@using System.Globalization;
@using PizzaStore.Data;

@{
    ViewData["Title"] = "Cart";
}
@model CartViewModel

<h1>@ViewBag.Title</h1>
<hr />

<a class="btn btn-outline-secondary" asp-controller="Pizza" asp-action="Index">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
    </svg>
    Return to catalog
</a>

@if (@Model.CartLines.Count == 0)
{
    <p>No items in cart.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Pizza</th>
                <th scope="col">Base Price</th>
                <th scope="col">Size</th>
                <th scope="col">Subtotal</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (CartLine l in @Model.CartLines)
            {
                <tr>
                    <td>
                        @l.CartLineId
                    </td>
                    <td>
                        Name: @l.Pizza.Name<br>
                        Ingredients:
                        @{
                            var ingredients = string.Join(", ", l.Pizza.Ingredients.Select(i => i.Name));
                            var formattedIngredients = CultureInfo.CurrentCulture.TextInfo.ToTitleCase(ingredients.ToLower());
                        }
                        @formattedIngredients
                        <br>
                        Extra toppings:
                        @{
                            var formattedExtratoppings = "";
                            if (l.ExtraToppings.Count == 0 || l.ExtraToppings == null)
                            {
                                formattedExtratoppings = "No extra toppings.";
                            }
                            else
                            {
                                var extratoppings = string.Join(", ", l.ExtraToppings.Select(i => i.Name));
                                formattedExtratoppings = CultureInfo.CurrentCulture.TextInfo.ToTitleCase(extratoppings.ToLower());
                            }
                        }
                        @formattedExtratoppings
                    </td>
                    <td>@l.Pizza.Price.ToString("C", CultureInfo.GetCultureInfo("nl-BE"))</td>
                    <td>@l.PizzaSize</td>
                    <td>@l.SubtotalPrice<br />@l.SubtotalExtraToppings<br />@l.SubtotalTotal</td>
                    <td>
                        <div>
                            <form asp-controller="Cart" asp-action="RemoveFromCart" asp-route-cartlineid="@l.CartLineId" class="d-flex justify-content-end">
                                <a class="btn btn-outline-success" asp-controller="Cart" asp-action="EditToppings" asp-route-id="@l.CartLineId" style="margin-right: 1em;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                    </svg>
                                    Edit extra toppings
                                </a>
                                <button type="submit" class="btn btn-outline-danger">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-dash" viewBox="0 0 16 16">
                                        <path d="M6.5 7a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4z"/>
                                        <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                                    </svg>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td>Total</td>
                <td></td>
                <td></td>
                <td></td>
                <td>@Model.TotalPrice.ToString("C", CultureInfo.GetCultureInfo("nl-BE"))</td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    <div class="d-flex flex-row">
        <a class="btn btn-success" asp-controller="Order" asp-action="Index" style="margin-right: 1em;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-check" viewBox="0 0 16 16">
                <path d="M11.354 6.354a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z" />
                <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
            </svg>
            Checkout
        </a>

        <form asp-controller="Cart" asp-action="ClearCart">
            <button type="submit" class="btn btn-danger">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-x" viewBox="0 0 16 16">
                    <path d="M7.354 5.646a.5.5 0 1 0-.708.708L7.793 7.5 6.646 8.646a.5.5 0 1 0 .708.708L8.5 8.207l1.146 1.147a.5.5 0 0 0 .708-.708L9.207 7.5l1.147-1.146a.5.5 0 0 0-.708-.708L8.5 6.793 7.354 5.646z" />
                    <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                </svg>
                Clear
            </button>
        </form>
    </div>

}
