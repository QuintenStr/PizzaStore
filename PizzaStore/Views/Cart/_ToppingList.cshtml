@using PizzaStore.Data;
@using PizzaStore.Models;
@model ExtraToppingsSearchViewModel

@{
    if(@Model.cartLine.ExtraToppings.Count() == 0)
    {
        <p>No extra toppings selected yet.</p>
    }
    else
    {
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
                @foreach (IngredientExtraToppingCartLineItem item in Model.cartLine.ExtraToppings)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td class="d-flex flex-row justify-content-end">
                            <form asp-controller="Cart" asp-action="DeleteTopping" asp-route-cartlineid="@Model.cartLine.CartLineId" asp-route-extratoppingid="@item.Id">
                                <button type="submit" class="btn btn-outline-danger">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                                    </svg>
                                    Remove
                                </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
}