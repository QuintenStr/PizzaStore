@model ExtraToppingsSearchViewModel

@{
    ViewData["Title"] = "Cart Item";
    ViewData["Subtitle"] = "Edit extra toppings";
}

@using PizzaStore.Data

<a class="btn btn-outline-secondary" asp-controller="Cart" asp-action="Index">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
    </svg>
    Return to Cart
</a>
<h1>@ViewBag.Title</h1>
<h2>@ViewBag.Subtitle</h2>
<hr />

@await Html.PartialAsync("_ToppingList", Model)

<hr />

<form asp-controller="Cart" asp-action="EditToppings" method="get" class="form-inline mb-5">
    <div class="d-flex flex-row align-items-end">
        <div class="form-group" style="flex-grow:1;">
            <label for="SearchByName">Search by ingredient name:</label>
            <input id="SearchByName" asp-for="SearchByName" class="form-control ml-1" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary" style="margin-left:1em;">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                </svg>
                Search
            </button>
            <a class="btn btn-outline-secondary" asp-controller="Cart" asp-action="ResetSearchEditToppings" asp-route-id="@Model.cartLine.CartLineId">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-counterclockwise" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 3a5 5 0 1 1-4.546 2.914.5.5 0 0 0-.908-.417A6 6 0 1 0 8 2v1z" />
                    <path d="M8 4.466V.534a.25.25 0 0 0-.41-.192L5.23 2.308a.25.25 0 0 0 0 .384l2.36 1.966A.25.25 0 0 0 8 4.466z" />
                </svg>
                Reset
            </a>
        </div>
    </div>
</form>

<hr />

@await Html.PartialAsync("_IngredientSelectList", Model)
