@using PizzaStore.Data;
@using System.Globalization;
@model StaffViewModel

@{
    ViewData["Title"] = "Staff Page";
    ViewData["Subtitle"] = "Pizza's to be made";
}

<h1>@ViewBag.Title</h1>
<h2>@ViewBag.Subtitle</h2>
<hr />

<h3>Pickup Orders</h3>
@{
    if (@Model.PickupOrders.Count() == 0)
    {
        <p>No pickup orders.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Pickup Time</th>
                    <th scope="col">Customer First Name</th>
                    <th scope="col">Customer Last Name</th>
                    <th scope="col">Status</th>
                    <th scope="col">Total Price</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (PickupOrder item in Model.PickupOrders)
                {
                    <tr>
                        <td>@item.OrderId</td>
                        <td>@item.PickupDateTime</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Status.ToString()</td>
                        <td>@item.TotalPrice.ToString("C", CultureInfo.GetCultureInfo("nl-BE"))</td>
                        <td>
                            <a class="btn btn-outline-primary" asp-controller="Order" asp-action="PickupDetails" asp-route-id="@item.OrderId">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                            </svg>
                                Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

<h3>Delivery Orders</h3>
@{
    if (@Model.DeliveryOrders.Count() == 0)
    {
        <p>No pickup orders.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Address</th>
                    <th scope="col">Customer First Name</th>
                    <th scope="col">Customer Last Name</th>
                    <th scope="col">Status</th>
                    <th scope="col">Total Price</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (DeliveryOrder item in Model.DeliveryOrders)
                {
                    <tr>
                        <td>@item.OrderId</td>
                        <td>@item.Street @item.Number, @item.Zip @item.City</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Status.ToString()</td>
                        <td>@item.TotalPrice.ToString("C", CultureInfo.GetCultureInfo("nl-BE"))</td>
                        <td>
                            <a class="btn btn-outline-primary" asp-controller="Order" asp-action="DeliveryDetails" asp-route-id="@item.OrderId">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                                </svg>
                                Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}