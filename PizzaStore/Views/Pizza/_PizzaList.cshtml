@model IEnumerable<Pizza>
@using System.Globalization;
@using Microsoft.AspNetCore.Authorization
@using PizzaStore.Data;
@inject IAuthorizationService authService

<div class="d-flex flex-wrap justify-content-around">
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="card m-4" style="width: 24rem;">
                <img class="card-img-top img-responsive" src="~/img/pizza/@item.ImageUrl" alt="Book cover picture" style="height: 13.5rem; object-fit: cover;">
                <ul class="list-group list-group-flush d-flex" style="flex-grow:1">
                    <li class="list-group-item flex-grow-1">
                        <h5 class="card-title">@item.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Price.ToString("C", CultureInfo.GetCultureInfo("nl-BE"))</h6>
                        <p class="card-text">
                            @{
                                var ingredients = string.Join(", ", item.Ingredients.Select(i => i.Name));
                                var formattedIngredients = CultureInfo.CurrentCulture.TextInfo.ToTitleCase(ingredients.ToLower());
                            }
                            @formattedIngredients
                        </p>
                        <form asp-controller="Cart" asp-action="AddToCart" enctype="multipart/form-data" class="d-flex flex-row align-items-center my-2">
                            <input id="id" name="id" value="@item.PizzaId" type="hidden" />
                            <select class="form-select" aria-label="Pizza Size Dropdown" style="margin-right:1em;" name="Size">
                                <option value="@((int)Size.Small)">@Size.Small</option>
                                <option value="@((int)Size.Medium)">@Size.Medium</option>
                                <option value="@((int)Size.Large)">@Size.Large</option>
                            </select>
                            <button type="submit" class="btn btn-primary" style="width:100%;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus" viewBox="0 0 16 16">
                                    <path d="M9 5.5a.5.5 0 0 0-1 0V7H6.5a.5.5 0 0 0 0 1H8v1.5a.5.5 0 0 0 1 0V8h1.5a.5.5 0 0 0 0-1H9V5.5z"/>
                                    <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                                </svg>
                                Add To Cart
                            </button>
                        </form>
                    </li>
                    @if ((await authService.AuthorizeAsync(User, "MinRankAdmin")).Succeeded)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <a class="btn btn-outline-primary" asp-controller="Pizza" asp-action="Edit" asp-route-id="@item.PizzaId">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                            </svg>
                            Edit
                        </a>
                        <a class="btn btn-outline-danger" asp-controller="Pizza" asp-action="Delete" asp-route-id="@item.PizzaId">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                            </svg>
                            Delete
                        </a>
                    </li>
                    }
                </ul>
            </div>
        }
        if (Model.Count() == 0)
        {
        <div class="alert alert-danger" role="alert">
            No pizzas have been found. Please try other search settings or <a class="alert-link" asp-controller="Pizza" asp-action="ResetSearch">click here to reset your search parameters</a>.
        </div>
        }

    }
</div>